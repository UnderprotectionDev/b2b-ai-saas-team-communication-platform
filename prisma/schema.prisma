generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Channel {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // foreign key (kinde IDs)
  workspaceId String // Kinde organization ID
  createdById String // Kinde user ID

  message Message[]

  @@unique([workspaceId, name])
}

model Message {
  id        String   @id @default(uuid())
  content   String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  authorId     String // Kinde user ID
  authorEmail  String // User's email
  authorName   String // Display name
  authorAvatar String // Avatar URL

  Channel   Channel? @relation(fields: [channelId], references: [id])
  channelId String?

  // Thread relations
  parentMessage Message?  @relation("MessageThread", fields: [threadId], references: [id], onDelete: Cascade)
  threadId      String?
  replies       Message[] @relation("MessageThread")
}
